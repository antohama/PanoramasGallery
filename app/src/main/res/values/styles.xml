<resources>

    <style name="AppTheme" parent="android:Theme.Material.Light">
        <item name="android:statusBarColor">@color/material_blue_700</item>
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
        <item name="android:windowBackground">@color/material_blue_grey_50</item>
        <item name="android:textColor">@color/material_blue_500</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ActionBarStyle" parent="android:Widget.Material.ActionBar">
        <item name="android:background">@color/material_blue_500</item>
        <item name="android:titleTextStyle">@style/TitleTextStyle</item>
    </style>

    <style name="TitleTextStyle" parent="android:TextAppearance.Material.Title">
        <item name="android:textColor">@color/primary_text_default_material_dark</item>
    </style>

    <style name="AppTheme.OverlayActivity">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/material_blue_grey_100</item>
        <item name="android:textColor">@color/material_blue_700</item>
        <item name="android:textSize">@dimen/normal_font</item>
    </style>

    <style name="AppTheme.OverlayActivity.FullPhotoLabel">
        <item name="android:layout_width">@dimen/label_photo_descr_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:elevation">1dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingEnd">@dimen/half_margin</item>
        <item name="android:paddingStart">@dimen/single_margin</item>
        <item name="android:layout_marginBottom">@dimen/single_margin</item>
        <item name="android:background">@color/material_blue_500</item>
        <item name="android:textColor">@color/primary_text_default_material_dark</item>
        <item name="android:textSize">@dimen/large_font</item>
    </style>

    <style name="AppTheme.OverlayActivity.FullPhotoDescr">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/half_margin</item>
        <item name="android:layout_marginEnd">@dimen/double_margin</item>
        <item name="android:layout_marginStart">@dimen/double_margin</item>
        <item name="android:layout_marginBottom">@dimen/single_margin</item>
    </style>

    <style name="AppTheme.OverlayActivity.FullPhotoLabel.Land">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/half_margin</item>
    </style>

    <color name="material_blue_500">#2196F3</color>
    <color name="material_blue_700">#1976D2</color>
    <color name="material_blue_grey_50">#ECEFF1</color>
    <color name="material_blue_grey_100">#CFD8DC</color>
</resources>
